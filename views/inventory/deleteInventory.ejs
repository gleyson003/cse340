<main>
    <h1><%= title %></h1>
    <%# messages() %>
  
    <form action="/inv/delete" method="POST" class="add-inventory-form">
        <p>Confirm Deletion - The deletion is permanent.</p>

        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>" readonly>

        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>" readonly>

        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= inv_price %>" readonly>
        
        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year %>" readonly>
    
        <input type="hidden" name="inv_id" value="<%= inv_id %>" readonly>

        <button type="submit">Delete Vehicle</button>
    </form>
</main>
